# =============================================
# API Configuration
# =============================================

# Base URL for the API server
# Example: http://localhost:8081, https://api.example.com
API_URL=http://localhost:8081

# API key for authentication (leave empty if not required)
# Example: "sk-1234567890abcdef"
API_KEY=""

# Host address to bind the server
# Use '0.0.0.0' to accept connections from any IP
API_HOST=0.0.0.0

# Port number for the admin panel
# Example: 8080, 3000, 5000
API_PORT=8080


# =============================================
# Authentication Configuration
# =============================================

# Enable basic authentication (true/false)
AUTH_BASIC_ENABLE=true

# Admin username for basic authentication
AUTH_BASIC_ADMIN_USERNAME=admin

# Admin password for basic authentication
# Change this in production!
AUTH_BASIC_ADMIN_PASSWORD=admin


# =============================================
# CORS Configuration
# =============================================

# Enable CORS (Cross-Origin Resource Sharing)
AUTH_CORS_ENABLE=true

# Allowed origins for CORS (comma-separated)
# Example: "https://example.com,https://app.example.com"
# Leave empty to allow all origins (not recommended for production)
AUTH_CORS_ALLOWED_ORIGINS=""

# Allowed HTTP methods for CORS (comma-separated)
# Example: "GET,POST,PUT,DELETE,OPTIONS"
AUTH_CORS_ALLOWED_METHODS=""

# Allowed headers for CORS (comma-separated)
# Example: "Content-Type,Authorization,X-API-Key"
AUTH_CORS_ALLOWED_HEADERS=""


# =============================================
# Logging Configuration - Standard Log
# =============================================

# Standard log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_STANDARD_LEVEL=INFO

# Output standard logs to console (true/false)
LOG_STANDARD_CONSOLE=true

# Standard log file path
LOG_STANDARD_FILE=logs/admin_panel.log

# Standard log format
LOG_STANDARD_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Maximum standard log file size in bytes
# Example: 10485760 = 10MB
LOG_STANDARD_MAX_SIZE=10485760


# =============================================
# Logging Configuration - Audit Log
# =============================================

# Enable audit logging (true/false)
LOG_AUDIT_ENABLE=true

# Output audit logs to console (true/false)
LOG_AUDIT_CONSOLE=false

# Audit log file path
LOG_AUDIT_FILE=logs/audit.log

# Audit log format
LOG_AUDIT_FORMAT="%(asctime)s - %(name)s - AUDIT - %(message)s"

# Maximum audit log file size in bytes
# Example: 10485760 = 10MB
LOG_AUDIT_MAX_SIZE=10485760


# =============================================
# Logging Configuration - AIOHTTP Access Log
# =============================================

# Disable aiohttp access logs (true/false)
LOG_AIOHTTP_DISABLE=true
